<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1">

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff680273"
        android:showDividers="end">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="10"
            android:paddingStart="10dp">


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="x"
                android:id="@+id/xCheckBox"
                android:layout_column="0"
                android:textSize="40dp"
                android:checked="true"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value for x"
                android:id="@+id/xValue"
                android:layout_column="2"
                android:paddingLeft="10dp"
                android:textSize="30dp" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="10"
            android:paddingStart="10dp"
            android:id="@+id/tableRow">

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="y"
                android:id="@+id/yCheckBox"
                android:layout_column="0"
                android:textSize="40dp"
                android:checked="true"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value for x"
                android:id="@+id/yValue"
                android:layout_column="2"
                android:paddingLeft="10dp"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="10"
            android:paddingStart="10dp"
            android:id="@+id/tableRow2" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="z"
                android:id="@+id/zCheckBox"
                android:layout_column="0"
                android:textSize="40dp"
                android:clickable="true"
                android:checked="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value for x"
                android:id="@+id/zValue"
                android:layout_column="2"
                android:paddingLeft="10dp"
                android:textSize="30dp" />
        </TableRow>


    </TableLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ff680273"
        android:showDividers="end"
        android:id="@+id/tableLayout"
        android:layout_gravity="center_horizontal">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="10"
            android:paddingStart="10dp" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distance"
                android:id="@+id/distCheckBox"
                android:layout_column="0"
                android:textSize="20dp"
                android:checked="true"
                android:clickable="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value for x"
                android:id="@+id/distValue"
                android:layout_column="2"
                android:paddingLeft="10dp"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="10"
            android:paddingStart="10dp"
            android:id="@+id/tableRow3" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Area"
                android:id="@+id/areaCheckBox"
                android:layout_column="0"
                android:textSize="20dp"
                android:checked="false"
                android:clickable="true"
                android:enabled="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value for x"
                android:id="@+id/areaValue"
                android:layout_column="2"
                android:paddingLeft="10dp"
                android:textSize="30dp" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_column="10"
            android:paddingStart="10dp"
            android:id="@+id/tableRow4" >

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volume"
                android:id="@+id/volCheckBox"
                android:layout_column="0"
                android:textSize="20dp"
                android:clickable="true"
                android:checked="false"
                android:enabled="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Value for x"
                android:id="@+id/volValue"
                android:layout_column="2"
                android:paddingLeft="10dp"
                android:textSize="30dp" />
        </TableRow>
    </TableLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="2"
        android:rowCount="1">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/backButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:id="@+id/saveButton" />
    </GridLayout>

</LinearLayout>